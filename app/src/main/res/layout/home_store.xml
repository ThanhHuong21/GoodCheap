<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FF9800"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
 <androidx.appcompat.widget.Toolbar android:layout_width="match_parent" android:layout_height="wrap_content"
 android:id="@+id/toolbar"
                                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                    style="@style/ThemeOverlay.AppCompat.Dark"
 />
    <ImageView android:layout_width="match_parent"
               android:scaleType="fitXY"
               android:padding="15dp"
               android:src="@drawable/pic_store"
               android:layout_height="180dp"
               android:id="@+id/hinhanh"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginLeft="10dp"
                  android:elevation="3dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="15dp"
                  android:background="@drawable/custom_shape_homestore"
                  android:orientation="vertical" android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:textSize="22sp"
                  android:textColor="@android:color/background_light"
                  android:padding="9dp"
                  android:shadowColor="@android:color/background_light"
                  android:text="Thời gian mở"
                  android:layout_height="wrap_content"
                  android:id="@+id/txttimeopen"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:textSize="22sp"
                  android:textColor="@android:color/background_light"
                  android:padding="9dp"
                  android:layout_marginTop="5dp"
                  android:shadowColor="@android:color/background_light"
                  android:text="Thời gian đóng"
                  android:layout_height="wrap_content"
                  android:id="@+id/txttimerclose"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:textSize="22sp"
                  android:textColor="@android:color/background_light"
                  android:padding="9dp"
                  android:drawablePadding="9dp"

                  android:layout_marginTop="5dp"
                  android:shadowColor="@android:color/background_light"
                  android:text="@string/diachi"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtdiachi"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:textSize="22sp"
                  android:textColor="@android:color/background_light"
                  android:padding="9dp"
                  android:drawablePadding="9dp"
                  android:drawableLeft="@drawable/call"
                  android:layout_marginTop="5dp"
                  android:shadowColor="@android:color/background_light"
                  android:text="@string/thongtilienhe"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtthongtinlienhe"/>
    </LinearLayout>

   <Button android:layout_width="140dp"
           android:id="@+id/btnsave"
           android:textColor="@android:color/background_light"
           android:textSize="16sp"
           android:textAllCaps="false"
           android:text="Cập Nhật"
           android:layout_marginTop="35dp"
           android:background="@drawable/custom_button_login"
           android:layout_height="wrap_content"
   android:layout_gravity="center"/>
</LinearLayout>