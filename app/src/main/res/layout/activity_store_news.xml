<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ED9C23"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/toolbar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    style="@style/ThemeOverlay.AppCompat.Dark"/>

    <ImageView android:layout_width="match_parent"
               android:id="@+id/hinhanh"

               android:layout_height="200dp"
    android:scaleType="centerCrop"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/txtthoigian"
    android:textSize="22sp"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="30dp"
              android:textStyle="bold"
              android:padding="8dp"
              android:text=" Thời gian : 10:00 : 23:00"
    android:textColor="@android:color/background_light"
    android:shadowColor="@android:color/background_light"/>



    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/txtdiachi"
              android:textSize="22sp"
              android:maxLines="2"
              android:textStyle="bold"
              android:layout_marginLeft="40dp"
              android:padding="8dp"
              android:text="Địa chỉ : 10:00 : 23:00"
              android:textColor="@android:color/background_light"
              android:shadowColor="@android:color/background_light"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/txtthongtin"
              android:textSize="22sp"
              android:textStyle="bold"
              android:padding="8dp"
              android:singleLine="true"
              android:layout_marginLeft="5dp"
              android:drawablePadding="9dp"
              android:drawableLeft="@drawable/call"
              android:text=" Liên hệ : 0924087196"
              android:textColor="@android:color/background_light"
              android:shadowColor="@android:color/background_light"/>

<LinearLayout android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_marginTop="15dp"
              android:layout_height="wrap_content">
    <View android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_gravity="center"
          android:layout_marginRight="10dp"

          android:layout_marginLeft="10dp"
          android:background="@android:color/background_light"
          android:layout_height="2dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center"
              android:textColor="@android:color/background_light"
              android:shadowColor="@android:color/background_light"
              android:textStyle="bold"
              android:layout_marginRight="5dp"
              android:layout_marginLeft="5dp"
              android:textSize="18sp"
    android:text="Danh Sách Sản Phẩm"/>
    <View android:layout_width="0dp"
          android:layout_marginLeft="10dp"
          android:layout_weight="1"
          android:layout_marginRight="10dp"
          android:layout_gravity="center"
          android:background="@android:color/background_light"
          android:layout_height="2dp"/>
</LinearLayout>
    <GridView android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/gv"
              android:layout_margin="8dp"
              android:horizontalSpacing="10dp"
              android:verticalSpacing="10dp"
    android:numColumns="2"/>



</LinearLayout>